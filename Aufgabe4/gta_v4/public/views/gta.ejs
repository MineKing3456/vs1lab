<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>GeoTagApp</title>
	<link rel='stylesheet' href='./stylesheets/style.css'/>
</head>

<body>

<header>

	<img src="./images/location.png" width="100"
		 alt="an image of a map and location">
	<h1>GeoTagApp</h1>
	<nav>
		<a href="#">About</a> | <a href="#">Help</a> | <a
				href="/">Home</a>
	</nav>
</header>

<main >

	<section class="tagging">
		<h2>Tagging</h2>

		<!-- ############### Aufgabe1a Form1 Start -->

		<form id="tag-form" action="/tagging" method="post">
			<fieldset style="text-align:left"><legend>Enter new Geotag</legend>

				<label class="tagging" for="Latitude">Latitude</label>

				<input class="tagging" type="number"  step="0.000000000001" min="-90"
					   max="90" id="i_Latitude" name="i_Latitude" required placeholder="45.000123"
					   <%if(latitude != undefined){%>value="<%= latitude%>"<% };%> >

				<label class="tagging" for="Longitude">Longtitude</label>

				<input class="tagging" type="number"  step="0.000000000001" min="-180"
					   max="180" id="i_Longitude" name="i_Longitude" required placeholder="45.00123"
					   <%if(longitude != undefined){%>value="<%= longitude%>"<% };%>  >

				<label class="tagging" for="Name">Name</label>

				<input class="tagging" type="text" minlength="1"
					   maxlength="10" id="i_Name" name="i_Name" required placeholder="myName">


				<label class="tagging" for="Hashtag">Hashtag</label>

				<input class="tagging" type="text" minlength="1"
					   maxlength="11" pattern="[#][a-zA-Z0-9]{1,10}"
					   id="i_Hashtag" name="i_Hashtag" placeholder="#schÃ¶n">

				<input class="tagging" id="taggingbutton" type="submit">
			</fieldset>
			<%// if(latitude != undefined && longitude != undefined) {
				//this.getElementById("i_Latitude").value = latitude;
				//this.getElementById("i_Longitude").value = longitude;
			//}%>



		</form>
		<!-- ############### Aufgabe1a Form1 Ende -->


	</section>

	<section class="discovery">
		<h2>Discovery</h2>

		<!-- ############### Aufgabe1a Form2 Start -->
		<form id="filter-form" action="/discovery" method="post">
			<fieldset>
				<legend>Filter by Searchterm</legend>
				<label class="discovery" for="Suche">Suche</label>
				<input class="discovery" type="text" id="Suche" name="Suche" required>
				<input class="discovery" type="hidden" id="LatitudeSearch"
					   name="LatitudeSearch" <%if(latitude != undefined){%>value="<%= latitude%>"<% };%>>
				<input class="discovery" type="hidden" id="LongitudeSearch" name="LongitudeSearch" <%if(longitude != undefined){%>
					   value="<%= longitude%>"<% };%> >
				<input class="discovery" id="discoverybutton" type="submit" >
			</fieldset>
		</form>

		<!-- ############### Aufgabe1a Form2 Ende -->
		<section class="flex">
			<div class="taglist">
				<ul id="results">
					<% if (taglist !== undefined) taglist.forEach(function(gtag) { %>
						<li><%= gtag.name %> ( <%= gtag.latitude %>,<%= gtag.longitude %>) <%= gtag.hashtag %> </li>
					<% }); %>

				</ul>
			</div>

			<div class="tagmap">
				<img id="result-img" src="./images/mapview.jpg"
					 
					 data-tags="<%=JSON.stringify(taglist)%>"

					 alt="a map with locations"/>
				<div class="caption">Result map</div>
			</div>
		</section>


	</section>

</main>

<footer>
	<span>2017 by LKIT</span>
</footer>
<!-- Load JavaScripts
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
<script src="./javascripts/geotagging.js"></script>


</body>
</html>

